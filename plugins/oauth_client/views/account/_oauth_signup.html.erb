<%= hidden_field_tag 'user[oauth_providers][][provider]', @user.oauth_providers.first[:provider] %>
<%= hidden_field_tag 'user[oauth_providers][][uid]', @user.oauth_providers.first[:uid] %>

<style>
  #signup-password,
  #signup-password-confirmation,
  #signup-email {
    display: none;
  }
</style>

<div id='signup-email-readonly'>
  <%= labelled_form_field(_('Email'), text_field(:user, :email, :class => "disabled", :readonly => true)) %>
</div>
